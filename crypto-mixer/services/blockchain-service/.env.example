# Пример конфигурации для блокчейн сервиса
# Скопируйте в .env и заполните реальными значениями

# Bitcoin Core RPC настройки
BTC_NODE_HOST=localhost
BTC_NODE_PORT=8332
BTC_RPC_USER=bitcoin
BTC_RPC_PASSWORD=your_password_here
BTC_NETWORK=mainnet

# Ethereum настройки  
ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
ETH_CHAIN_ID=1

# Solana настройки
SOL_RPC_URL=https://api.mainnet-beta.solana.com
SOL_CLUSTER=mainnet-beta
SOL_COMMITMENT=confirmed

# Tron настройки
TRON_FULL_NODE=https://api.trongrid.io
TRON_SOLIDITY_NODE=https://api.trongrid.io
TRON_EVENT_SERVER=https://api.trongrid.io
TRON_API_KEY=your_tron_api_key_here

# Мониторинг настройки
HEALTH_CHECK_INTERVAL=30000

# HSM/Vault настройки (опционально)
HSM_ENABLED=false
VAULT_URL=https://vault.example.com
VAULT_TOKEN=your_vault_token

# Database настройки для мониторинга
DATABASE_URL=postgresql://user:password@localhost:5432/crypto_mixer

# Логирование
LOG_LEVEL=info